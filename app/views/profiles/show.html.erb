


<!-- PROFILE TEXT -->
<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-offset-4">
    <h1>Profile Page</h1>
    <% if current_user.avatar? %>
      <%= cl_image_tag current_user.avatar.path, class: "avatar-square" %>
    <% end %>
      <h4>Username: <%= current_user.username %></h4>
      <h4>First Name: <%= current_user.first_name %></h4>
      <h4>Last name: <%= current_user.last_name %></h4>
      <p>Email address: <%= current_user.email %></p>
      <%= link_to "Edit profile", edit_profile_path, class: "btn btn-default" %>
      <% if current_user.admin? %>
        <%= link_to t(".top_call_to_action", default: "New Post"), new_post_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
      <% end %>
    </div>
  </div>
</div>
