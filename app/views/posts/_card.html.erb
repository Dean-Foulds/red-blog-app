<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('post.photo_url');">
        <div class="card-category"><%= post.created_at.strftime("Posted %a %m %b %Y at %H:%M")  %></div>
          <div class="card-description">
            <h2><%= post.title %></h2>
            <p><%= post.summary %></p>
          </div>
          <% if policy(Post).show? %>
          <%= link_to "", post_path(post), class: "card-link"%>
          <% end %>
      </div>
      <% if current_user.admin? %>
        <%= link_to t(".top_call_to_action", default: "New Post"), new_post_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
      <% end %>
       <% if policy(Post).edit? %>
       <%= link_to "Edit", edit_post_path(post), :class => "btn btn-default" %>
       <% end %>
    </div>
  </div>
</div>
