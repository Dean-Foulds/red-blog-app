<div class="banner-container">
  <div class="container">
    <div class="banner banner-top banner-gradient text-center" style="background-image: linear-gradient(-200deg, rgba(145,0,65,0.8) 0%, rgba(141,0,15,0.6) 0%), url('https://i.ytimg.com/vi/zt6WdnrAvpE/maxresdefault.jpg');">

        <div class="banner-gradient-shadow"></div>
          <div class="banner-content banner-font">
          <% if current_user.admin? %>
                <%= link_to t(".top_call_to_action", default: "New Post"), new_post_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
              <% end %>
            <h1>
              Roses are red, Tories are blue
            </h1>
            <p>
              <strong>Reporting current affairs,</strong> left wing <strong> views &amp; opinions</strong>.
            </p>
          </div>
        </div>
      </div>
    </div>

<div class="container">
  <div class="row">
    <% @posts.each do |p| %>
    <%= render "card", post: p %>
    <% end %>
  </div>
</div>
